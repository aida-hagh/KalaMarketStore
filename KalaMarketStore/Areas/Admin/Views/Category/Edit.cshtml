@model Category
@{
    ViewData["Title"] = $"ویرایش دسته بندی{Model.CategoryFaTitle}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
 
}


<div>
    <h4 class="label label-default p-10">@ViewData["Title"]</h4>
</div>

<br />

<div class="col-lg-12">
    <div class="card-box">

        <form asp-action="Edit" method="post" >

            <input asp-for="CategoryId" type="hidden" />

            <div class="form-group">
                <label asp-for="CategoryFaTitle" for="title"> </label>
                <input asp-for="CategoryFaTitle" type="text" parsley-trigger="change"  class="form-control" id="title" data-parsley-id="4">
                <span asp-validation-for="CategoryFaTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryEnTitle" for="title"> </label>
                <input asp-for="CategoryEnTitle" type="text" parsley-trigger="change" class="form-control" id="title" data-parsley-id="4">
                <span asp-validation-for="CategoryEnTitle" class="text-danger"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

