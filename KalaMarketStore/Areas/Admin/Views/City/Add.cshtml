@model City
@{
    ViewData["Title"] = "افزودن شهر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-box">


        <form asp-action="Add" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="CityName" for="title"> نام شهر</label>
                <input asp-for="CityName" type="text" parsley-trigger="change" placeholder=" نام شهر را وارد کنید" class="form-control" id="title" data-parsley-id="4">
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>

 

            <div class="form-group">
                <label asp-for="ProvinceId"> نام استان</label>

                <select asp-for="ProvinceId" asp-items="@ViewBag.Province" class="form-control">
                    <option value=""> انتخاب کنید</option>

                </select>
                <span asp-validation-for="ProvinceId" class="text-danger"></span>

            </div>



            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

