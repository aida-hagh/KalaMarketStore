@model ProductGallery
@{
    ViewData["Title"] = "افزودن محصول";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-box">


        <form asp-action="Add" method="post" enctype="multipart/form-data">

            <input asp-for="ProductId" hidden value="@ViewBag.id" />

            <div class="form-group">
                <label asp-for="ImgName" for="img"> تصویر محصول</label>
                <input name="file" type="file" parsley-trigger="change" class="form-control" id="img" data-parsley-id="4">
                <span asp-validation-for="ImgName" class="text-danger"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

