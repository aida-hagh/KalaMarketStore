@model ProductGallery
@{
    ViewData["Title"] = $"ویرایش گالری تصاویر محصول";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-lg-12">
    <div class="card-box">


        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input hidden asp-for="ProductGalleryId"  />
            <input hidden asp-for="ProductId" value="@ViewBag.id" />

            <div class="form-group">
                <input asp-for="ImgName" hidden />
                <label asp-for="ImgName" for="img"> تصویر محصول</label>
                <input name="file" type="file" parsley-trigger="change"  class="form-control" id="img" data-parsley-id="4">
                <span asp-validation-for="ImgName" class="text-danger"></span>
                <img width="140" height="130" class="img-thumbnail" src="~/Site/assets/images/@Model.ImgName" />

            </div>




            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>
