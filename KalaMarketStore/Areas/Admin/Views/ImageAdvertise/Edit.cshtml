@model ImageAdvertise
@{
    ViewData["Title"] = $"ویرایش تصاویر تبلیغاتی{Model.ImageAdvertise_Title}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <h4 class="label label-default p-10">@ViewData["Title"]</h4>
</div>

<br />

<div class="col-lg-12">
    <div class="card-box">

        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input asp-for="ImageAdvertiseId" type="hidden" />

            <div class="form-group">
                <label asp-for="ImageAdvertise_Title" for="title"> عنوان تصاویر تبلیغاتی</label>
                <input asp-for="ImageAdvertise_Title" type="text" parsley-trigger="change" class="form-control" id="title" data-parsley-id="4">
                <span asp-validation-for="ImageAdvertise_Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input hidden asp-for="ImageAdvertise_Image" />
                <label asp-for="ImageAdvertise_Image" for="img"> تصویر </label>
                <input name="file" type="file" parsley-trigger="change"  class="form-control" id="img" data-parsley-id="4">
                <span asp-validation-for="ImageAdvertise_Image" class="text-danger"></span>
                تصویر جاری:
                <img width="140" height="130" class="img-thumbnail" src="~/Site/assets/images/@Model.ImageAdvertise_Image" />

            </div>
         

            <div class="form-group">

                <label asp-for="ImageAdvertise_Order" for="sort">ترتیب اسلایدر</label>
                <input asp-for="ImageAdvertise_Order" type="number" parsley-trigger="change" class="form-control" id="sort" data-parsley-id="4">
            </div>


            <div class="form-group">
                <div class="checkbox">
                    <input asp-for="IsActive" id="remember-1" type="checkbox" data-parsley-multiple="remember-1" data-parsley-id="13">
                    <label asp-for="IsActive" for="remember-1"> آیا فعال باشد؟ </label>
                </div>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

