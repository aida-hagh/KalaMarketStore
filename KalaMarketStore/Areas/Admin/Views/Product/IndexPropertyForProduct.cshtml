
@{
    ViewData["Title"] = "";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Property> properties = ViewBag.Propertys;
    List<PropertyValue> propertyValues = ViewBag.PropertyValue;
    TempData["productid"] = TempData["productid"].ToString();
}


<div class="col-lg-12">
    <div class="card-box">
 

        <form asp-action="AddPropertyForProduct" method="post" >
            @foreach (var item in properties)
            {
                 <div class="form-group">
                <label for="title">@item.PropertyTitle   </label>
                <input  type="hidden" name="nameid" value="@item.PropertyId"  id="title" data-parsley-id="4">
                    <input class="form-control" name="value" type="text" value="@(propertyValues.Where(x=>x.PropertyId==item.PropertyId).Select(x=>x.propertyValue).FirstOrDefault())" />
            </div>
            }    
           



            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

