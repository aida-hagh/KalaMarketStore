@using KalaMarketStore.Core.ExtentionMethod;
@model IEnumerable<PropertyValue>
@{
    ViewData["Title"] = "لیست مقدار ویژگی ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    var product = ViewData["Product"] as List<Product>;
    var prop = ViewData["Property"] as List<Property>;

}


<div class="col-sm-12">
    <div class="panel">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="m-b-30">
                        <p class="btn btn-primary">@ViewData["Title"]</p>
@*                        <a href="/Admin/PropertyValue/Add" id="addToTable" class="btn btn-primary waves-effect waves-light">افزودن <i class="fa fa-plus"></i></a>
*@                    </div>
                </div>
            </div>

            <div class="editable-responsive">
                <div id="datatable-editable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">
                            @if (TempData["Result"] != null)
                            {
                                @if (TempData["Result"].ToString() == "true")
                                {
                                    <div class="alert alert-success alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        اطلاعات  با موفقیت ثبت شد.
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        خطا در انجام عملیات
                                    </div>
                                }
                            }

                            @if (TempData["NotFoundPropertyValue"] != null)
                            {
                                <script>
                                    setTimeout(function () {
                                        Swal.fire({
                                            position: 'top-end',
                                            icon: 'error',
                                            title: 'مقداری یافت نشد.',
                                            showConfirmButton: false,
                                            timer: 1500
                                        })
                                    }, 50)
                                </script>
                            }
                            <table class="table table-striped dataTable no-footer" id="datatable-editable" role="grid" aria-describedby="datatable-editable_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="موتور جستجو: activate to sort column descending" style="width: 156px;">#</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" aria-label="مرورگر: activate to sort column ascending" style="width: 328px;">  مقدار خصوصیت </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" aria-label="مرورگر: activate to sort column ascending" style="width: 328px;">  برای این ویژگی </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" aria-label="مرورگر: activate to sort column ascending" style="width: 328px;">  برای این محصول </th>
@*                                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="فعالیت" style="width: 98px;">فعالیت</th>
*@                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() > 0)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr class="gradeX odd" role="row">
                                                <td>@item.PropertyValueId</td>
                                                <td>@item.propertyValue</td>
                                                <td>@item.Property.PropertyTitle</td>
                                                <td>@item.Product.ProductFaTitle</td>
                                              
                                 

                                          @*      <td class="actions">
                                                    <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
                                                    <a href="/Admin/PropertyValue/IndexPropertyForPropertyValue/@item.PropertyValueId" on-editing cancel-row"><i class="fa fa-PropertyValue-hunt"></i></a>
                                                    <a href="/Admin/PropertyValue/Edit/@item.PropertyValueId" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                                                    <a href="/Admin/PropertyValue/Delete/@item.PropertyValueId" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                                                </td>*@
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr class="alert alert-danger">
                                            مقداری موجود نمی باشد.
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
               
                </div>
            </div>
        </div>
        <!-- end: panel body -->

    </div>
</div>


@section scripts{
    <script src="~/adminpanel/assets/js/sweetalert.js"></script>
}
