@model Province


<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete" method="post"
              data-ajax="true"
              data-Success="Refresh"
              enctype="multipart/form-data">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="ProvinceId" hidden />

                <div class="form-group">

                    <label asp-for="ProvinceName" class="control-label"></label>
                    <input readonly asp-for="ProvinceName" class="form-control" />
                    <span asp-validation-for="ProvinceName" class="text-danger"></span>
                </div>
           </div>

            <div class="form-group">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
                <button type="submit" value="Create" class="btn btn-danger">حذف</button>
            </div>

        </form>
    </div>
</div>