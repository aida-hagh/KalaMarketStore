@model MainSlider
@{
    ViewData["Title"] = $" حذف اسلایدر {Model.SliderTitle} ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div >
    <h4 class="label label-default p-10">@ViewData["Title"]</h4>
</div>
<br />
<div class="col-lg-12">
    <div class="card-box">
      

        <form asp-action="Delete">

            <input asp-for="SliderId" type="hidden" />

            <div class="form-group">
                <label asp-for="SliderTitle" for="title"> عنوان اسلایدر</label>
                <input readonly="readonly" asp-for="SliderTitle" type="text" parsley-trigger="change"  placeholder="عنوان اسلایدر را وارد کنید" class="form-control" id="title" data-parsley-id="4">
                <span asp-validation-for="SliderTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SliderAlt" for="Alt">  اسلایدرAlt </label>
                <input readonly="readonly" asp-for="SliderAlt" type="text" parsley-trigger="change"  placeholder="اسلایدر را وارد کنید Alt " class="form-control" id="Alt" data-parsley-id="4">

            </div>

            <div class="form-group">
                <label asp-for="SliderLink" for="link"> لینک اسلایدر</label>
                <input readonly="readonly" asp-for="SliderLink" type="text" parsley-trigger="change"  placeholder="لینک اسلایدر را وارد کنید" class="form-control" id="link" data-parsley-id="4">
            </div>

            <div class="form-group">
                
                <label asp-for="SliderImage" for="img"> تصویر اسلایدر</label>
                <input  asp-for="SliderImage" hidden/>
                <span asp-validation-for="SliderImage" class="text-danger"></span>
                <img width="140" height="130" class="img-thumbnail" src="~/Site/assets/images/@Model.SliderImage" />

            </div>

            <div class="form-group">
                <label asp-for="SliderSort" for="sort">ترتیب اسلایدر</label>
                <input readonly="readonly" asp-for="SliderSort" type="number" parsley-trigger="change"  placeholder="ترتیب اسلایدر را وارد کنید" class="form-control" id="sort" data-parsley-id="4">
              
            </div>


            <div class="form-group">
                <div class="checkbox">
                    <input readonly="readonly" asp-for="IsActive" id="remember-1" type="checkbox" data-parsley-multiple="remember-1" data-parsley-id="13">
                    <label asp-for="IsActive" for="remember-1"> آیا فعال باشد؟ </label>
                </div>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                   حذف
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

