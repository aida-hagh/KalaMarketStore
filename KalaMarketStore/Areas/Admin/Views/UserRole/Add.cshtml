@model UserRole
@{
    ViewData["Title"] = "افزودن نقش برای کاربر ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-box">


        <form asp-action="Add" method="post">

            <div class="form-group">
                <label asp-for="UserId" for="title">  کاربران</label>
                <select asp-for="UserId" asp-items="@ViewBag.User"  class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div> 
     
            

            <div class="form-group">
                <label asp-for="RoleId" for="title"> نقش ها </label>
                <select asp-for="RoleId" asp-items="@ViewBag.Role"  class="form-control"><</select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

 

     


            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

