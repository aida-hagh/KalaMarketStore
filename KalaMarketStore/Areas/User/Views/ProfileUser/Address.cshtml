@model ShowAddressForUserViewModel
@{
    string Action = ViewContext.RouteData.Values["Action"].ToString();
    var User = ViewData["User"] as User;
}


<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <div class="col-lg-3 col-md-3 col-xs-12 pr">


                        <div class="sidebar-profile sidebar-navigation">
                            <section class="profile-box">
                                <header class="profile-box-header-inline">
                                    <div class="profile-avatar user-avatar profile-img">
                                        <img src="/Site/assets/images/man.png">
                                    </div>
                                </header>
                                <footer class="profile-box-content-footer">



                                    <span class="profile-box-nameuser"></span>


                                    @if (User != null)
                                    {
                                        <span class="profile-box-registery-date">@User.UserName @User.UserFamily </span>
                                        <span class="profile-box-phone">شماره همراه : @User.Mobile</span>

                                    }
                                    <div class="profile-box-tabs">
                                        <a href="/Account/LogOut" class="profile-box-tab-sign-out"><i class="mdi mdi-logout-variant"></i>خروج از حساب</a>
                                    </div>
                                </footer>
                            </section>
                            <section class="profile-box">
                                <ul class="profile-account-navs">
                                    <li class="profile-account-nav-item navigation-link-dashboard ">
                                        <a href="/User/ProfileUser/Index" class="@(Action=="Index" ? "active":"" )">
                                            <i class="mdi mdi-account-outline"></i>
                                            پروفایل
                                        </a>
                                    </li>
                                    <li class="profile-account-nav-item navigation-link-dashboard">
                                        <a href="/User/ProfileUser/AllOrders" class="@(Action=="AllOrders" ? "active":"" )">
                                            <i class="mdi mdi-cart"></i>
                                            همه سفارش ها
                                        </a>
                                    </li>
                                    <li class="profile-account-nav-item navigation-link-dashboard">
                                        <a href="/User/ProfileUser/Address" class="@(Action=="Address" ? "active":"" )">
                                            <i class="mdi mdi-map-outline"></i>
                                            آدرس ها
                                        </a>
                                    </li>
                                    <li class="profile-account-nav-item navigation-link-dashboard">
                                        <a href="#" class="">
                                            <i class="mdi mdi-email-open-outline"></i>
                                            نظرات
                                        </a>
                                    </li>
                                    <li class="profile-account-nav-item navigation-link-dashboard">
                                        <a href="#" class="">
                                            <i class="mdi mdi-tooltip-text-outline"></i>
                                            اطلاعات حساب
                                        </a>
                                    </li>
                                </ul>
                            </section>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        @if (TempData["Result"] != null)
                        {
                            @if (TempData["Result"].ToString() == "true")
                            {
                                <div class="alert alert-success alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    اطلاعات  با موفقیت ثبت شد.
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    خطا در انجام عملیات
                                </div>
                            }
                        }
                        @if (Model!=null)
                        {
                            <div class="profile-content">
                                <div class="profile-stats">
                                    <div class="profile-address">
                                        <div class="box-header">
                                            <span class="box-title">نشانی ما</span>
                                        </div>
                                        <div class="profile-address-item">
                                            <div class="profile-address-item-top">
                                                <div class="profile-address-item-title">خراسان شمالی ، بجنورد</div>
                                                <div class="ui-more">
                                                    <a href="/User/ProfileUser/DeleteAddress">
                                                        <button class="btn-remove-address btn btn-danger" type="submit">حذف</button>

                                                    </a>
                                                </div>
                                            </div>

                                            <div class="profile-address-content">
                                                <ul class="profile-address-info">
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-map-outline"></i>
                                                            @Model.ProvinceName ، @Model.CityName
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-email-outline"></i>
                                                            @Model.Phone
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-phone"></i>
                                                            @Model.Mobile
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-account"></i>
                                                            @Model.FullAddress
                                                        </div>
                                                    </li>
                                                    <li class="location-link">
                                                        <a href="/User/ProfileUser/EditAddress" class="edit-address-link">ویرایش آدرس</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning ">
                                <div style="padding-bottom:20px;">
                                <span class="pull-right">آدرسی موجود نمی باشد.</span>
                                    <a href="/User/ProfileUser/AddAddress" class="pull-left">افزودن آدرس</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>