@model User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- profile------------------------------->
<div class="container-main">
<div class="d-block">
    <section class="profile-home">
        <div class="col-lg">
            <div class="post-item-profile order-1 d-block">
                <div class="col-lg-3 col-md-3 col-xs-12 pr">

                    <partial name="_SidebarUser" />

                </div>
                <div class="col-lg-9 col-md-9 col-xs-12 pl">
                    <div class="profile-content">
                        <div class="profile-stats">
                            <table class="table table-profile">
                                <tbody>
                                    <tr>
                                        <td class="w-50">
                                            <div class="title">نام و نام خانوادگی:</div>
                                                <div class="value">@Model.UserName  @Model.UserFamily</div>
                                        </td>
                                        <td>
                                            <div class="title">پست الکترونیک :</div>
                                            <div class="value">@Model.Email</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="title">شماره تلفن همراه:</div>
                                            <div class="value">@Model.Mobile</div>
                                        </td>
                                        <td>
                                            <div class="title">تاریخ عضویت:</div>
                                            <div class="value">@Model.CreateAccount.MiladiToShamsi()</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="title"> دریافت خبرنامه :</div>
                                            <div class="value">بله</div>
                                        </td>
                                        <td>
                                            <div class="title"> کد ملی :</div>
                                            <div class="value">-</div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                           
                            <div class="profile-edit-action">
                                <a href="/User/ProfileUser/EditProfile" class="link-spoiler-edit btn btn-secondary">ویرایش اطلاعات</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
</div>
