    <script src="/Site/assets/js/vendor/jquery.ez-plus.js"></script>

    <script>
        var price = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        function GetPrice(code) {
            var temp = [];
            $.each(price, function (index, item) {
                if (item.ColorCode == code)
                    temp.push(item);
            });
            return temp;
        }

        $(".code").click(function () {
            var code = $(this).data('code');
            var ListPrice = GetPrice(code);
            UpdatePrice(ListPrice[0]);

        });

        $(".code").first().click();
        function UpdatePrice(ListPrice) {
            $(".gurantee").html(ListPrice.GuaranteeName);

            if (ListPrice.MainPrice > ListPrice.SpecialPrice) {
                $(".sepcial").show();
                $(".sepcial").html(ListPrice.SpecialPrice);
                $(".MainPrice").html(ListPrice.MainPrice);
            } else {
                $(".sepcial").hide();
                $(".MainPrice").html(ListPrice.MainPrice);
            }
            $(".addcart").attr('href', '/AddCart/' + ListPrice.PriceId);

        }
    </script>


    <script>
        $(document).ready(function () {
            $("#Review").load("/Product/ShowReview/" + @Model.First().ProductId);
        });
    </script>


    <script>
        $("#Specifications-tab").click(function () {
            $("#Specifications").load("/Product/ShowAllProperty/" + @Model.First().ProductId);
        });
    </script>

    <script>
        $("#question-and-answer-tab").click(function () {
            $("#question-and-answer").load("/Product/ShowQuesAnswer/" + @Model.First().ProductId);
        });
    </script>


    <script>
        function Scrolltops() {
            setTimeout(function () {
                $('html,body').animate({
                    scrollTop: $("#submitform").offset().top - 200
                }, 500)
            }, 500)
        };

        function SubmitForm() {

            $("#submitform").submit(function (e) {
                e.preventDefault();
                var form = $(this);
                var url = form.attr('action');

                $.ajax({
                    type: 'post',
                    url: url,
                    data: form.serialize(),
                    success: function (res) {
                        if (res > 0) {
                            alert(" با موفقیت ثبت شد.");
                            $("#text").val('');
                        } else {
                            alert("failed")
                        }
                    }

                });

            });

        }

        $("#question-and-answer").delegate('.addAnswer', 'click', function () {
            Scrolltops();
            var username = $(this).data('username');
            var questionid = $(this).data('questionid');
            $("#hidden").show();

            if (username === " ") {
                username = "کاربر کالا مارکت";
            }
            $("#questionid").val(questionid);
            $("#username").text(username);

            $("#cancell").click(function () {
                $("#hidden").hide();
                $("#questionid").val('');

            });

        });

    </script>

