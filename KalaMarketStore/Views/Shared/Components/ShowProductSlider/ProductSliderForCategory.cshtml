@model List<ProductSliderForCategoryViewModel>
@{
    int active = 0;

}

@if (Model.Count() > 0)
{
    @foreach (var item in Model.Skip(0).Take(3))
    {
        <div class="col-lg-12 col-md-12 col-xs-12 pr order-1 d-block">
            <div class="slider-widget-products">
                <div class="widget widget-product card">
                    <header class="card-header">
                        <span class="title-one"></span>
                        <h3 class="card-title">@item.CategoryTitle</h3>
                    </header>
                    <div class="product-carousel owl-carousel owl-theme owl-rtl owl-loaded owl-drag">
                        <div class="owl-stage-outer">
                            <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2234px;">
                                @foreach (var pro in item.ProductViewModels.Where(x=>x.CategoryId==item.CategoryId))
                                {
                                    <div class="owl-item @(active>=3 ? "active": "")" style="width: 309.083px; margin-left: 10px;">
                                        <div class="item">



                                            @if (pro.MainPrice > pro.SpecialPrice)
                                            {
                                                var priceOf = ((pro.MainPrice - pro.SpecialPrice) * 100) / pro.MainPrice;

                                                <div class="d-flex ">
                                                    <div class="promotion-badge text-danger">فروش ویژه</div>

                                                    <div class="discount-d ">

                                                        <span>@Math.Round(Convert.ToDouble(priceOf)) %</span>
                                                    </div>
                                                </div>

                                            }
                                            <br />
                                            <br />

                                            <a href="/Product/Deatails/@pro.ProductId" class="d-block hover-img-link">
                                                <img src="/Site/assets/images/@pro.ProductImage " class="img-fluid" alt="@pro.ProductFaTitle">
                                            </a>
                                            <h2 class="post-title">
                                                <a href="/Product/Deatails/@pro.ProductId">
                                                    @pro.ProductFaTitle
                                                </a>
                                            </h2>
                                            @if (pro.MainPrice > pro.SpecialPrice)
                                            {
                                                <div class="price">
                                                    <del><span>@pro.MainPrice<span>تومان</span></span></del>
                                                    <ins><span>@pro.SpecialPrice<span>تومان</span></span></ins>
                                                </div>

                                            }
                                            else
                                            {
                                                <div class="price">
                                                    <ins><span>@pro.MainPrice<span>تومان</span></span></ins>
                                                </div>

                                            }

                                        </div>
                                    </div>

                                }

                            </div>
                        </div>
                        <div class="owl-nav">
                            <button type="button" role="presentation" class="owl-prev disabled">
                                <i class="fa fa-angle-right"></i>
                            </button>
                            <button type="button" role="presentation" class="owl-next">
                                <i class="fa fa-angle-left"></i>
                            </button>
                        </div>
                        <div class="owl-dots disabled"></div>
                    </div>
                </div>
            </div>
        </div>

    }

}




